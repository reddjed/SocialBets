@page
@model SocialBets.Areas.Identity.Pages.Account.RegisterModel.InputModel
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/style.css"/>

<h1>@ViewData["Title"]</h1>

    <div class="auth">
        <form asp-controller="User" asp-action="Register" method="post">
            <div class="form-group">
                <h4>Create a new account.</h4>
                <hr />
            </div>
            
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Input.Email"></label>*@
                <input asp-for="@Model.Email" autocomplete="off" placeholder="Email..." class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Input.Password"></label>*@
                <input asp-for="@Model.Password" type="password" placeholder="Password..." class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Input.ConfirmPassword"></label>*@
                <input asp-for="@Model.ConfirmPassword" type="password" placeholder="Confirm password..." class="form-control" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-register">Register</button>
        </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
